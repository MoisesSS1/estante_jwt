<div class="container-insertBook">

    <h1>Inserir livro</h1>
    <form action="/insertbook" method="POST">
    
    <label for="name">Nome:</label>
    <input type="text" name="name" id="name" placeholder="Nome do livro">

    <label for="author">Autor:</label>
    <input type="text" name="author" id="author" placeholder="Autor do livro">

    <label for="pages"></label>
    <input type="number" name="pages" id="pages" placeholder="Qtd. de paginas">

    <label for="synopsis">Sinopse</label>
    <textarea name="synopsis" id="synopsis" cols="30" rows="15"></textarea>

    <input type="submit" value="Cadastrar">


    </form>

</div>